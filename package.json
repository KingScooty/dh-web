{
  "name": "dh-web",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "startDev": "node index.dev.js",
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register $(find src -path '*spec*')",
    "dev": "npm run startDev & webpack-dev-server --progress --color",
    "build": "NODE_ENV=production webpack --progress --color -p --config webpack.prod.config.js"
  },
  "keywords": [],
  "author": "Scotty Vernon <scott.vernon@gmail.com> (http://wildflame.co.uk)",
  "license": "ISC",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "enzyme": "^2.2.0",
    "eslint-config-xo": "^0.14.1",
    "eslint-config-xo-react": "^0.7.0",
    "eslint-plugin-react": "^5.1.1",
    "lodash": "^4.11.2",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "^15.0.2",
    "react-hot-loader": "^1.3.0",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "xo": "^0.15.1"
  },
  "dependencies": {
    "bluebird": "^3.3.5",
    "classnames": "^2.2.5",
    "dompurify": "^0.7.4",
    "html-minifier": "^2.1.3",
    "immutable": "^3.8.1",
    "koa": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.0.1",
    "koa-static": "^2.0.0",
    "marked": "^0.3.5",
    "moment": "^2.13.0",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "react-timeago": "^3.0.0",
    "redux": "^3.5.2",
    "spdy": "^3.3.1",
    "twitter-text": "^1.13.4"
  },
  "xo": {
    "space": true,
    "globals": "document",
    "extends": "xo-react",
    "rules": {
      "curly": [
        "error",
        "multi-line"
      ],
      "brace-style": [
        2,
        "stroustrup"
      ],
      "camelcase": [
        2,
        {
          "properties": "never"
        }
      ],
      "babel/object-curly-spacing": 0,
      "react/no-danger": 0,
      "react/jsx-curly-spacing": [
        2,
        "always"
      ],
      "react/jsx-space-before-closing": [
        2,
        "always"
      ]
    },
    "overrides": [
      {
        "files": "__specs__/*.js",
        "envs": [
          "node",
          "mocha"
        ]
      }
    ]
  }
}
